{
  "name": "open-finance",
  "private": true,
  "version": "1.0.0",
  "description": "Open Finance",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "apply:dev:env": "node scripts/environment-manager.js dev",
    "apply:test:env": "node scripts/environment-manager.js test",
    "start:dev": "export NODE_ENV=development && yarn apply:dev:env && nest start --watch",
    "start:debug": "export NODE_ENV=development && yarn apply:dev:env && nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" -f json -o reports/eslint-report.json  --quiet --fix",
    "lint:local":"eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "test": "export NODE_ENV=test && jest --detectOpenHandles --forceExit --coverage --testResultsProcessor jest-sonar-reporter",
    "test:local": "jest --detectOpenHandles --forceExit",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config jest.config.e2e.js --detectOpenHandles --forceExit",
    "test:e2e:docker": "yarn apply:test:env && export NODE_ENV=test && docker-compose --env-file ./env/.env.test -f docker-compose.e2e.yml up --abort-on-container-exit --exit-code-from app",
    "prepare": "husky install",
    "sonar": "yarn test && yarn lint && node sonar-scanner-local.js",
    "coverage": "jest --forceExit --detectOpenHandles --verbose --coverage && open ./coverage/lcov-report/index.html",
    "start": "nest start",
    "start:env:local":"yarn apply:dev:env && docker-compose --env-file ./env/.env.development  --verbose up -d"
  },
  "dependencies": {
    "@nestjs/common": "^8.1.1",
    "@nestjs/config": "^2.0.0",
    "@nestjs/core": "^8.1.1",
    "@nestjs/jwt": "^9.0.0",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "^8.1.1",
    "@nestjs/swagger": "^5.2.1",
    "@nestjs/typeorm": "^9.0.0-next.2",
    "add": "^2.0.6",
    "builder-pattern": "^1.3.0",
    "cache-manager": "^4.0.1",
    "cache-manager-redis-store": "^2.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "cookie-parser": "^1.4.6",
    "crypto": "^1.0.1",
    "download": "^8.0.0",
    "nest-winston": "^1.6.2",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "pg": "^8.7.3",
    "redis": "^4.1.0",
    "reflect-metadata": "^0.1.13",
    "request-ip": "^2.2.0",
    "rimraf": "^3.0.2",
    "rxjs": "^7.4.0",
    "swagger-ui-express": "^4.4.0",
    "typeorm": "0.3.6",
    "typeorm-encrypted": "^0.7.0",
    "util": "^0.12.4",
    "winston": "^3.7.2",
    "yarn": "^1.22.19"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@faker-js/faker": "^6.3.1",
    "@gitbeaker/node": "^35.7.0",
    "@nestjs/cli": "^8.1.3",
    "@nestjs/schematics": "^8.0.4",
    "@nestjs/testing": "^8.1.1",
    "@types/cache-manager": "^4.0.1",
    "@types/cache-manager-redis-store": "^2.0.1",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.13",
    "@types/faker": "^6.6.9",
    "@types/jest": "^27.0.2",
    "@types/jest-when": "^3.5.0",
    "@types/node": "^16.11.1",
    "@types/passport": "^1.0.9",
    "@types/passport-jwt": "^3.0.6",
    "@types/request-ip": "^0.0.37",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "babel-plugin-module-resolver": "^4.1.0",
    "better-sqlite3": "^7.5.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-import-helpers": "^1.2.1",
    "eslint-plugin-jest": "^26.5.3",
    "eslint-plugin-prettier": "^3.4.1",
    "factory.ts": "^1.2.0",
    "faker": "^6.6.6",
    "husky": "^8.0.1",
    "jest": "^27.3.0",
    "jest-mock-extended": "^2.0.6",
    "jest-sonar-reporter": "^2.0.0",
    "jest-when": "^3.5.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.4.1",
    "sonarqube-scanner": "^2.8.1",
    "source-map-support": "^0.5.20",
    "sqlite3": "^5.0.8",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.3.0",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.5.5"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "yarn eslint"
    ]
  },
  "jestSonar": {
    "reportPath": "reports",
    "reportFile": "test-report.xml",
    "indent": 4
  }
}
